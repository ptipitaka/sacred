---
import StarlightPage from '@astrojs/starlight/components/StarlightPage.astro'

// Simple test without getStaticPaths
const testEditions = [
  { code: 'ch', name: 'ฉัฏฐสังคายนา' },
  { code: 'mc', name: 'มหาชน' }
];
---

<StarlightPage
  frontmatter={{
    title: 'Tipitaka Test',
    description: 'Simple test page'
  }}
>
  <h1>Tipitaka Test</h1>
  
  <div class="test-grid">
    {testEditions.map(edition => (
      <div class="test-card">
        <h3>{edition.name}</h3>
        <p>Edition: {edition.code}</p>
        <a href={`/tipitaka-test/${edition.code}`}>View {edition.code}</a>
      </div>
    ))}
  </div>
</StarlightPage>

<style>
  .test-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1rem;
    margin: 2rem 0;
  }
  
  .test-card {
    border: 1px solid var(--sl-color-gray-5);
    border-radius: 8px;
    padding: 1rem;
  }
  
  .test-card a {
    color: var(--sl-color-accent);
  }
</style>